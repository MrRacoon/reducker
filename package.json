{
  "name": "reducker",
  "version": "1.0.0",
  "description": "utilities to reduce redux boilerplate",
  "main": "dist/index.js",
  "scripts": {
    "test": "cross-env NODE_ENV=test nyc mocha",
    "lint": "eslint 'src/*.js'",
    "docs": "esdoc",
    "build": "babel --out-dir=dist src",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MrRacoon/reducker.git"
  },
  "author": "erik sutherland <erik.misu@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MrRacoon/reducker/issues"
  },
  "homepage": "https://github.com/MrRacoon/reducker#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-istanbul": "^4.1.4",
    "babel-plugin-transform-object-assign": "^6.22.0",
    "babel-preset-es2015": "^6.24.1",
    "chai": "^4.1.2",
    "cross-env": "^5.0.5",
    "esdoc": "^1.0.2",
    "esdoc-standard-plugin": "^1.0.0",
    "eslint": "^4.6.1",
    "eslint-config-airbnb-base": "^12.0.0",
    "eslint-plugin-import": "^2.7.0",
    "istanbul": "^0.4.5",
    "mocha": "^3.5.3",
    "nyc": "^11.2.1",
    "redux-mock-store": "^1.3.0",
    "sinon": "^3.2.1",
    "sinon-chai": "^2.13.0"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "env": {
      "mocha": true
    },
    "globals": {
      "sinon": true,
      "promiseStub": true,
      "dispatchStub": true,
      "sandbox": true
    }
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "transform-object-assign"
    ],
    "env": {
      "test": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "nyc": {
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false
  }
}
